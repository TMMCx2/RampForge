# Application
APP_NAME="DCDock API"
APP_VERSION="0.1.0"
# DEBUG=false recommended for production (disables auto-reload for SECRET_KEY stability)
DEBUG=true

# Database
# For SQLite (development)
DATABASE_URL="sqlite+aiosqlite:///./dcdock.db"
# For PostgreSQL (production)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/dcdock"

# Security
# IMPORTANT: Generate a secure SECRET_KEY and keep it consistent!
# Generate with: python3 -c "from secrets import token_urlsafe; print(token_urlsafe(32))"
SECRET_KEY="your-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]

# Server
API_HOST="0.0.0.0"
API_PORT=8000
