# Application
APP_NAME="DCDock API"
APP_VERSION="0.1.0"
DEBUG=false

# Database - PostgreSQL (Production)
DATABASE_URL="postgresql+asyncpg://dcdock_user:CHANGE_THIS_PASSWORD@localhost:5432/dcdock"

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY="CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_USE_secrets.token_urlsafe(32)"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - Update with your actual frontend URLs
CORS_ORIGINS=["https://yourdomain.com","https://api.yourdomain.com"]

# Server
API_HOST="0.0.0.0"
API_PORT=8000

# PostgreSQL Connection Pool Settings (optional)
# These are SQLAlchemy defaults, tune for your deployment
# POOL_SIZE=5
# MAX_OVERFLOW=10
# POOL_TIMEOUT=30
# POOL_RECYCLE=3600
